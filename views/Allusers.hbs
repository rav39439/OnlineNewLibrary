<h1>{{title}}</h1>

<div style="margin-top:70px">

<form action="/searchbyname" Method="GET" style="display:inline-flex">
  <div class="form-outline">
    <input type="search" id="form1" name="username" class="form-control"style="width:400px" placeholder="Search User" />
  </div>
  <button type="submit" class="btn btn-primary"style="margin-left:20px">Search
    
  </button>
</form>

<div style="display:inline-flex;float:right ;">
<form action="/searchbybook" Method="GET" style="margin-left:20px ;">
  
  <button type="submit" class="btn btn-primary">SearchByBook
 
  </button>
</form>

<form action="/searchbyfine" Method="GET"style="margin-left:20px ;">
  
  <button type="submit" class="btn btn-primary">SearchByfine
 
  </button>
</form>
</div>
</div>
{{#if titl}}
 <div id="messagebody">
      <div class="alert alert-primary" id="message" role="alert">{{titl}} </div>
      </div>
{{/if}}
<table class="table table-bordered new4" >
  <thead class="thead-dark">
                  <h4 style="margin-top:60px;margin-left:100px">All the Users of the Library</h4>

    <tr>
      <th scope="col">sno</th>
      <th scope="col">username</th>
      <th scope="col">useremail</th>
      <th scope="col">Qualification</th>
      <th scope="col">Phoneno</th>
      <th scope="col">Books</th>
      <th scope="col">Fine</th>
      <th scope="col">Payyourfine</th>

    </tr>
  </thead>
  <tbody>
   

{{#each users}}
    <tr>
      <th scope="row">{{_id}}</th>
      <td>{{ username }}</td>
      <td>{{ Useremail }}</td>
      <td>{{ Qualification }}</td>
      <td>{{ Phoneno }}</td>
      <td>
         {{#Books}}

                                   <ul style="list-style-type: none;margin: 0;padding: 0;">


                                    <li style="font-size:19px ;">Bookname:<strong>{{Bookname}}</strong></li>
                                    <li>Bookauthor: {{Bookauthor}}</li>

                                    </ul>
                                    <br>
                                {{/Books}} 


        
      </td>
             <td>{{ fine }}</td>


             <td>  <a href="payfine/{{_id}}">
        <button class="GFG">
            Payfine
        </button>
    </a></td>

    </tr>
   {{/each}}

  </tbody>
</table>

